# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/handloom-products
DB_NAME=handloom-products

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
